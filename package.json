{
    "name": "timescope",
    "displayName": "TimeScope",
    "description": "A VS Code extension for tracking work sessions with analytics and a dashboard.",
    "publisher": "davidclass",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:timescope.start",
        "onCommand:timescope.pause",
        "onCommand:timescope.resume",
        "onCommand:timescope.stop",
        "onCommand:timescope.dashboard"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "TimeScope",
            "properties": {
                "timescope.global_storage_dir": {
                    "type": "string",
                    "description": "Folder where TimeScope stores global jobs.json and logs.jsonl.",
                    "format": "folder",
                    "default": ""
                }
            }
        },
        "commands": [
            {
                "command": "timescope.start",
                "title": "Start",
                "category": "TimeScope"
            },
            {
                "command": "timescope.pause",
                "title": "Pause",
                "category": "TimeScope"
            },
            {
                "command": "timescope.resume",
                "title": "Resume",
                "category": "TimeScope"
            },
            {
                "command": "timescope.stop",
                "title": "Stop",
                "category": "TimeScope"
            },
            {
                "command": "timescope.dashboard",
                "title": "Show Summary Dashboard",
                "category": "TimeScope"
            },
            {
                "command": "timescope.rename_job",
                "title": "Rename Job",
                "category": "TimeScope"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.4.0",
        "vscode": "^1.1.34"
    },
    "files": [
        "out/",
        "media/",
        "README.md",
        "LICENSE.md",
        "package.json",
        "icon.png"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Heliman84/timescope.git"
        },
    "icon": "icon.png"

}
